
@{
    Layout = null;
}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">CLIENTS</h3>
    </div>
    <div class="panel-body">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="form-horizontal">
                    <fieldset>
                        <legend>Legend</legend>
                        <div class="form-group">
                            <label for="inputFind" class="col-lg-2 control-label">Find:</label>
                            <div class="col-lg-2">
                                <input type="text" class="form-control" id="inputFind" ng-model="inputFind">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputInvoicedId" class="col-lg-2 control-label">Invoiced#:</label>
                            <div class="col-lg-2">
                                <input type="number" class="form-control" id="inputInvoicedId" ng-model="inputInvoicedId">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputClient" class="col-lg-2 control-label">Client:</label>
                            <div class="col-lg-2">
                                <select class="form-control" id="inputClient" ng-options="client for client in clientList" ng-model="inputclient"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-10 col-lg-offset-2">
                                <button type="reset" class="btn btn-default" ng-click="resetForm()">Clear</button>
                                <button type="submit" class="btn btn-primary" ng-click="searchClient()">Search</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
        <div id="grid1" ui-grid="{ data: invoicesData }" class="grid"></div>
    </div>
</div>

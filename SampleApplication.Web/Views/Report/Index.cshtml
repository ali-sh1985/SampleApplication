@{
    Layout = null;
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">FILTER</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="checkbox-inline">
                                <strong>Metrics:</strong>
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" value="">Invoices
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" value="">Payments
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="checkbox-inline">
                                <strong>Report:</strong>
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Monthly (Last 2 years)
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Quarterly (Last 3 years)
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Annually (Last 4 years)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body">
                        <highchart id="chart1" config="chartConfig" class="span10"></highchart>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
